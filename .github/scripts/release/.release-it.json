{
  "git": {
    "commitMessage": "chore: release v${version}",
    "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "../../../VERSION",
        "type": "text/plain"
      },
      "out": {
        "file": "../../../VERSION",
        "type": "text/plain"
      }
    }
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p --starting-version 0.3.0 -o ../../../CHANGELOG.md"
  }
}
